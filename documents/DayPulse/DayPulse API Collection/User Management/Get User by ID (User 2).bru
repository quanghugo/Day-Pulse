meta {
  name: Get User by ID (User 2)
  type: http
  seq: 5
}

get {
  url: {{base_url}}/users/{{user2_id}}
  body: none
  auth: inherit
}

headers {
  Authorization: Bearer {{user1_access_token}}
}

docs {
  Get User Profile by ID (Protected Endpoint)
  
  Returns any user's public profile information by their UUID.
  Useful for viewing other users' profiles.
  
  Requires authentication to access.
}

script:post-response {
  if (res.getStatus() === 200) {
      const jsonData = res.getBody();
      test('Retrieved User 2 profile by ID successfully', () => {
          expect(jsonData.result).to.not.be.null;
          expect(jsonData.result.id).to.equal(bru.getEnvVar('user2_id'));
      });
      
      test('Response matches UserResponse structure', () => {
          expect(jsonData.result).to.have.property('id');
          expect(jsonData.result).to.have.property('username');
          expect(jsonData.result).to.have.property('name');
      });
      
      console.log('User 2 profile:', jsonData.result);
  }
}

settings {
  encodeUrl: true
}
